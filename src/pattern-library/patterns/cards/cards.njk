<article class="card">
  <img src="{{ data.img.src }}" alt="{{ data.img.alt }}" />
  <div class="card__content flow">
    <h3 class="card__heading text-size-3">
      <a href="{{ data.url }}">{{ data.title }}</a>
    </h3>
    <p>{{ data.summary }}</p>
    <a class="card__action" href="{{ href.data.url }}">More</a>
  </div>
</article>
