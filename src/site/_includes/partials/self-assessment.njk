<web-assessment class="w-callout {% if assessment.questions.length === 1 %}web-assessment--singleton{% endif %}" {% if assessment.height %}style="height: {{ assessment.height }};"{% endif %}>

{% if assessment.blurb %}
  <div class="w-callout__blurb web-assessment__blurb">
    {{ assessment.blurb | md | safe }}
  </div>
{% endif %}

{% if assessment.questions.length > 1 %}
  <web-tabs class="web-assessment__content" label="{{ assessment.tabLabel }}s for knowledge self check">
  {% for question in assessment.questions %}
  <div class="web-tabs__panel" role="tabpanel" data-label="{{ assessment.tabLabel }}" hidden>
    {% include 'partials/self-assessment-question.njk' %}
  </div>
  {% endfor %}
  </web-tabs>
{% else %}
  {% for question in assessment.questions %}
  <div class="web-assessment__content">
    {% include 'partials/self-assessment-question.njk' %}
  </div>
  {% endfor %}
{% endif %}

</web-assessment>
